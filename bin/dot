#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

set -e

parentDirectory="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P)"
dotfilesDirectory="$(cd "$( dirname "$parentDirectory" )" && pwd -P)"

msg () {
  printf "\r  [ \033[0;33m$1\033[0m ] $2\n"
}

info() {
	# print with blue color, right side arrow and no new line
	msg "â€ºâ€º" "$1"
}

warning() {
	msg "!!" "$1"
}

displayUsageAndExit() {
	echo "dot -- dotfiles management"
	echo ""
	echo "Usage: dot [options]"
	echo ""
	echo "Options:"
	echo "  -e, --edit    Open dotfiles directory for editing"
	echo "  -h, --help    Show this help message and exit"
	exit
}

while test $# -gt 0; do
	case "$1" in
		"-h"|"--help")
			displayUsageAndExit
			;;
		"-e"|"--edit")
			exec "$EDITOR" "$dotfilesDirectory"
			exit
			;;
		*)
			echo "Invalid option: $1"
			displayUsageAndExit
			;;
	esac
	shift
done

export ZSH=$HOME/.dotfiles

# Set macOS defaults
$ZSH/macos/set-defaults.sh

# Install homebrew
$ZSH/homebrew/install.sh 2>&1

# Upgrade homebrew
msg "ðŸº" "Brew update."
brew update

# Install homebrew bundle
msg "ðŸº" "Brew install bundle from .Brewfile." 
brew tap "homebrew/core" 2>&1
brew bundle --file="$HOME/.Brewfile" 2>&1

if [ -f "$HOME/.Brewfile.local" ]; then
  msg "ðŸº" "Brew install bundle from .Brewfile.local." 
  brew bundle --file="$HOME/.Brewfile.local" 2>&1
else
  warning "brew install bundle from Brewfile.local not found."
fi


# Install software
info "$ZSH/script/install"
$ZSH/script/install