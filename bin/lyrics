#!/bin/bash
#
# lyrics.sh
#
# A fine piece of work by @febuiles
#   https://gist.github.com/1549979

artist=`arch -i386 osascript -e'tell application "iTunes"' -e'get artist of current track' -e'end tell'`
title=`arch -i386 osascript -e'tell application "iTunes"' -e'get name of current track' -e'end tell'`

song=`curl -G --data-urlencode "artist=$artist" \
 	--data-urlencode "title=$title" -s http://makeitpersonal.co/lyrics`

echo -e "$artist - $title\n$song" | less