function! s:get_default_branch()
  " Source: https://stackoverflow.com/questions/28666357/git-how-to-get-default-branch
  let defaultbranch = systemlist('git symbolic-ref refs/remotes/origin/HEAD | sed "s@^refs/remotes/@@"')[0]
  if v:shell_error || defaultbranch =~ 'fatal: .*'
    echoerr 'Could not detect default branch, using origin/master'
    echoerr 'Maybe .git/refs/remotes/origin/HEAD is missing as this repo has not been cloned?'
    echoerr 'Set symbolic ref manually: git symbolic-ref refs/remotes/origin/HEAD refs/remotes/origin/master'
    let defaultbranch = 'origin/master'
  endif
  return defaultbranch
endfunction

function! s:get_diff_file_master_merge()
  let defaultbranch = s:get_default_branch()
  return systemlist('git merge-base ' . defaultbranch . ' HEAD')[0]
endfunction

