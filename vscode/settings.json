{
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "editor.fontFamily": "'Hack Nerd Font', Menlo, Monaco, 'Courier New', monospace",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.json": "jsonc",
    // this looks best
    "*.brewfile": "pip-requirements"
  },
  "gitlens.blame.dateFormat": "YYYY-MM-DD",
  "gitlens.currentLine.dateFormat": "YYYY-MM-DD",
  "gitlens.defaultDateFormat": "YYYY-MM-DD hh:mm:ss",
  "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
  "gitlens.hovers.enabled": false,
  "gitlens.statusBar.dateFormat": "YYYY-MM-DD",
  "path-intellisense.showHiddenFiles": true,
  "prettier.printWidth": 88,
  "python.linting.flake8Enabled": true,
  "python.pythonPath": "python3",
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.linting.mypyEnabled": true,
  "python.experiments.enabled": false,
  "python.jediEnabled": false,
  "python.linting.flake8Args": [
    "--ignore=E203,E266,E501,W503,F403,F401",
    "--max-line-length=89",
    "--max-complexity=18",
    "--select=B,C,E,F,W,T4,B9"
  ],
  "shellcheck.customArgs": ["-e SC1071"],
  "terminal.integrated.defaultProfile.osx": "/usr/local/bin/zsh",
  "workbench.colorTheme": "An Old Hope Classic",
  "workbench.iconTheme": "vscode-icons",
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "sqltools.highlightQuery": false,
  "python.sortImports.path": "isort",
  "python.analysis.memory.keepLibraryAst": true,
  "python.analysis.memory.keepLibraryLocalVariables": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "github.gitAuthentication": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "peacock.vslsShareColor": "#dd0531",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "gitlens.codeLens.enabled": false,
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": false
  }
}
