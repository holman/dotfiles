# Sample gitconfig
#

[hub]
        protocol = https

[user]
        name = AUTHORNAME
        email = AUTHOREMAIL
        signingkey = AUTHORGPGKEY

[credential]
        helper = GIT_CREDENTIAL_HELPER

[alias]
        co = checkout
        promote = !$ZSH/bin/git-promote
        wtf     = !$ZSH/bin/git-wtf
        rank-contributors = !$ZSH/bin/git-rank-contributors
        count   = !git shortlog -sn
        prune-local-branches = !git fetch --prune && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D
        branch-name = !git rev-parse --abbrev-ref HEAD
        gpull = !git pull --rebase --prune

[color]
        diff = auto
        status = auto
        branch = auto
        ui = true

[core]
        excludesfile = ~/.gitignore
        editor = vim
        autocrlf = input

[apply]
        whitespace = nowarn

[mergetool]
        keepBackup = false

[difftool]
        prompt = false

[help]
        autocorrect = 1

[push]
        # See `git help config` (search for push.default)
        # for more information on different options of the below setting.
        #
        # Setting to git 2.0 default to suppress warning message
        default = simple

[commit]
        template = /Users/he8us/.gitmessage.txt
        gpgsign = true

[diff]
        tool = pstorm

[difftool]
        prompt = false

[difftool.pstorm]
        cmd = /usr/local/bin/pstorm diff "$LOCAL" "$REMOTE"

[merge]
        tool = pstorm

[mergetool.pstorm]
        cmd = /usr/local/bin/pstorm merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"

[difftool "sourcetree"]
	    cmd = /usr/local/bin/pstorm diff \"$LOCAL\" \"$REMOTE\"
	    path =

[mergetool "sourcetree"]
	    cmd = /usr/local/bin/pstorm merge \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
	    trustExitCode = true
[fetch]
	prune = true

[gpg]
	program = gpg

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	required = true
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
