[core]
    quotepath = false
		editor = vim
    excludesfile = ~/.gitignore
[user]
    name = Steven Bone
    email = steven@stevenbone.com
[color]
    ui = true
	diff = true
[alias]
    st = status
    co = checkout
    sp = stash pop
    di = diff
    dc = diff --cached
		lg = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]' --decorate --date=short
		wd = diff --color-words
[push]
	default = tracking
